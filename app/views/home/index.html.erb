<table class="table table-bordered">
<thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Email</th>
    <th scope="col">Action</th>
  </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
      <% if current_user != user %>
      <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.email %></td>
      <% unless user.admin? %>
          <td><%= link_to 'Make Admin', set_admin_user_path(user), data: { turbo_method: :patch } %></td> 
      <% else %>
          <td><%= link_to 'Remove Admin', remove_admin_user_path(user), data: { turbo_method: :patch } %></td>
      <% end %>
      </tr>
      <% end %>
  <% end %>
</tbody>
</table>