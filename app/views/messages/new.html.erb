<h1 class="col p-3 mb-2 bg-light text-dark">New Message</h1>

<%= form_with(model: [ @discussion_thread.project, @discussion_thread, @message ], local: true) do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>
      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Thread', project_discussion_thread_path(@discussion_thread.project, @discussion_thread) %>
